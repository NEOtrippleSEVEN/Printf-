#include <stdarg.h>
#include "libft.h"

// Helper function we discussed for integers
int ft_putnbr_printf(int n)
{
    int     count;
    long    num;
    char    c;

    count = 0;
    num = n; 
    if (num < 0)
    {
        count += write(1, "-", 1);
        num = -num;
    }
    if (num > 9)
        count += ft_putnbr_printf(num / 10);
    c = (num % 10) + '0';
    count += write(1, &c, 1);
    return (count);
}

int ft_printf(const char *format, ...)
{
    va_list args;
    int     i;
    int     count;

    va_start(args, format);
    i = 0;
    count = 0;
    while (format[i])
    {
        if (format[i] == '%')
        {
            i++; // Move to specifier
            if (format[i] == 'c')
                count += write(1, &(char){va_arg(args, int)}, 1);
            else if (format[i] == 's')
            {
                char *str = va_arg(args, char *);
                // We left off here: you need to handle the NULL case
                if (!str)
                    count += write(1, "(null)", 6);
                else
                    while (*str)
                        count += write(1, str++, 1);
            }
            else if (format[i] == 'd' || format[i] == 'i')
                count += ft_putnbr_printf(va_arg(args, int));
            else if (format[i] == '%')
                count += write(1, "%", 1);
        }
        else
            count += write(1, &format[i], 1);
        i++;
    }
    va_end(args);
    return (count);
}












